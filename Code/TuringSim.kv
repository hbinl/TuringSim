###################### UIObjs
<UIObj_State>:
    canvas:
        Color:
            rgba: 0.1,0.1,0.1,1
        Ellipse:
            pos: self.pos
            size: self.size

<UIObj_State_Halting>:
    canvas:
        Color:
            rgba: 0.1,0.1,0.1,1
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.4,0.4,0.4,1
        Ellipse:
            pos: (self.pos[0] + self.size[0]*0.05, self.pos[1] + self.size[1]*0.05)
            size: (self.size[0] * 0.9, self.size[1] * 0.9)



<UIObj_State_Template>:
    canvas.before:
        Color:
            rgba: 0.4,0.4,0.4,0.2
        Ellipse:
            pos: self.pos
            size: self.size

    canvas:
        Color:
            rgba: 0.4,0.7,0.1,1
        Ellipse:
            pos: self.pos
            size: self.size


<UIObj_State_Halting_Template>:
    canvas:
        Color:
            rgba: 0.1,0.1,0.1,1
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.4,0.4,0.4,1
        Ellipse:
            pos: (self.pos[0] + self.size[0]*0.05, self.pos[1] + self.size[1]*0.05)
            size: (self.size[0] * 0.9, self.size[1] * 0.9)


<UIObj_Transition>:
    canvas:
        Color:
            rgba: 0,0,0,1



