#:kivy 1.9.0
<Container>:
    RelativeLayout:
        size:root.size
        pos: root.pos
        orientation: 'vertical'
        id: container_rl

        BoxLayout:
            size_hint_y: 0.8
            pos_hint: {'y':0}

            ScatterLayout:
                size_hint: (2,2)
                id: layout_states
                bcolor: 0.7, 0.7, 0.7, 1
                canvas.before:
                    Color:
                        rgba: self.bcolor
                    Rectangle:
                        pos: self.pos
                        size: self.size

        BoxLayout:
            size_hint_y: 0.08
            pos_hint: {'y':0.92}
            orientation: 'horizontal'
            id: button_layout
            padding: 10
            Button:
                id: close_button
                text: "Close"
                on_release: root.close_handler()
                background_color: (1,0.1,0.1,1)
                font_size: 25

            Button:
                id: save_button
                text: "Save As"
                on_release: root.save_handler(self.text)
                font_size: 25



#            BoxLayout:
#                size: (30,5)

            Button:
                id: zoom_button_plus
                text: "Zoom In"
                on_release: root.zoom_handler(self.text)
                background_color: (0.3,0.3,0.3,1)
                font_size: 25

            Button:
                id: zoom_button_actual
                text: "Original"
                on_release: root.zoom_reset()
                background_color: (0.3,0.3,0.3,1)
                font_size: 25

            Button:
                id: zoom_button_minus
                text: "Zoom Out"
                on_release: root.zoom_handler(self.text)
                background_color: (0.3,0.3,0.3,1)
                font_size: 25

            Button:
                id: play_button
                text: "PLAY"
                on_release: root.zoom_handler(self.text)
                background_color: (0.5,0.8,0.5,1)
                font_size: 25


            Button:
                id: stop_button
                text: "STOP"
                on_release: root.zoom_handler(self.text)
                background_color: (0.5,0.8,0.5,1)
                font_size: 25
#            BoxLayout:
#                size: (10,5)

            Button:
                id: edit_button
                text: "Edit"
                on_release: root.edit_handler(self)
                font_size: 25
            Button:
                id: about_button
                text: "About"
                on_release: root.about_handler()
                font_size: 25


        RelativeLayout:
            id: tape_layout
            size_hint_y: 0.07
            size_hint_x:0.6
            pos_hint: {'y':0.84, 'x':0.2}
            orientation: 'horizontal'
#            Button:
#                pos_hint: {'x':0}
#                size_hint_x: 0.1
#                text: "<"
            BoxLayout:
                pos_hint: {'x':0.11}
                size_hint_x: 0.75
                orientation: 'horizontal'
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size[0]+6, self.size[1]+6

                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        pos: self.pos[0]+3, self.pos[1]+3
                        #size: root.size[0], 60
                        size: self.size

                Label:
                    text: "#  #  #  #  #  #  #  #  #  #  #  #  #  #  #  #  #  #  #"

#            Button:
#                pos_hint: {'x':0.88}
#                size_hint_x: 0.1
#                text: ">"

        UIObj_Tape_Head:
            size_hint: (0.05,0.1)
            pos_hint: {'y': 0.84}
            center_x: root.size[1] * 0.41


<UIObj_Tape_Head>:
    canvas:
        Line:

            width: 3
            points: self.x+10, self.y+10,self.x+30, self.y+10, self.x+20, self.y+15, self.x+10, self.y+10



#### DIALOGS
<SaveFileChooserWindow>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            size: root.size
            pos: root.pos
            padding: [0,30,0,30]
            FileChooserListView:
                size: root.size
                pos: root.pos
                id: savefilechooser

        BoxLayout:
            size_hint_y: 0.1

            Button:
                text: "Cancel"
                on_release: root.cancel_dialog()

            Button:
                text: "Save"
                on_release: root.save_file(savefilechooser.path, savefilechooser.selection)


<BrowseFileChooserWindow>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            size: root.size
            pos: root.pos
            padding: [0,30,0,30]
            FileChooserListView:
                size: root.size
                pos: root.pos
                id: filechooser

        BoxLayout:
            size_hint_y: 0.1

            Button:
                text: "Cancel"
                id: cancel_button
                on_release: root.cancel_dialog()

            Button:
                text: "Load"
                on_release: root.load_file(filechooser.path, filechooser.selection)


<HomeScreenWindow>:
    RelativeLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        id: homescreenwindow
        BoxLayout:
            size: root.size
            y: root.size[1]*0.5
            #pos_hint_y: 0.2
            size_hint_y: 0.5
            orientation: "vertical"
            Label:
                text: "Welcome to TuringSim - Iteration 1"
            Label:
                text:"TuringSim v0.1 by Loh Hao Bin, Ashley Ong Yik Mun & Varshinee Servansingh"
            Label:
                text:"FIT3140 Advanced Programming, Semester 2, 2015"

        BoxLayout:
            size_hint_y: 0.4

            bcolor: 0.7, 0.7, 0.7, 1
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: "vertical"
            Button:
                text: "Load from Turing Machine XML"
                id: home_load

            Button:
                text: "Create New Deterministic Turing Machine"
                id: home_new_dtm

#            Button:
#                text: "TODO: Create New Non-Deterministic Turing Machine"
#                id: home_new_ndtm


<Spike1Message>:
    RelativeLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        Label:
            #size_hint_y: 0.6
            pos_hint_y: 0.8

            text: "TEST Save New XML: Save a new TM XML in current directory named 1.xml \nTEST Update XML: Update the 1.xml in current directory with new data"
        BoxLayout:
            size_hint_y: 0.3
            orientation: "horizontal"
            Button:
                text: "TEST Save New XML"
                on_release: root.test1()
            Button:
                text: "TEST Update XML"
                on_release: root.test2()

###################### UIObjs
<UIObj_State>:
    canvas:
        Color:
            rgba: 0.1,0.1,0.1,1
        Ellipse:
            pos: self.pos
            size: self.size

<UIObj_State_Halting>:
    canvas:
        Color:
            rgba: 0.1,0.1,0.1,1
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.4,0.4,0.4,1
        Ellipse:
            pos: (self.pos[0] + self.size[0]*0.05, self.pos[1] + self.size[1]*0.05)
            size: (self.size[0] * 0.9, self.size[1] * 0.9)



<UIObj_State_Template>:
    canvas.before:
        Color:
            rgba: 0.4,0.4,0.4,0.2
        Ellipse:
            pos: self.pos
            size: self.size

    canvas:
        Color:
            rgba: 0.4,0.7,0.1,1
        Ellipse:
            pos: self.pos
            size: self.size


<UIObj_State_Halting_Template>:
    canvas:
        Color:
            rgba: 0.1,0.1,0.1,1
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.4,0.4,0.4,1
        Ellipse:
            pos: (self.pos[0] + self.size[0]*0.05, self.pos[1] + self.size[1]*0.05)
            size: (self.size[0] * 0.9, self.size[1] * 0.9)


# UNUSED
<UIObj_Transition>:
    canvas:
        Color:
            rgba: 0,0,0,1
        Line:
            bezier: (self.origin_x, self.origin_y, self.mid_x*1.2, self.mid_y*1.2, self.end_x, self.end_y)
            width: 2
    Label:
        text: root.tid
        pos: root.mid_x, root.mid_y
        size: (30,30)
        size_hint: None, None


# UI MENUS AND TOOLBARS
<UIObj_Edit>:
    BoxLayout:
        id: temp_layout
        padding: 10
        orientation: "horizontal"
        size: root.size

        Button:
            id: add_button
            text: "Add State.."
            on_release: root.add_state()
            font_size: 25

        Button:
            id: add_tran_button
            text: "Add Transitions.."
            on_release: root.add_transitions()
            font_size: 25

        Button:
            id: del_button
            text: "Delete State"
            on_release: root.delete_state()
            font_size: 25

        Button:
            id: make_initial_button
            text: "Make Starting"
            on_release: root.make_initial_state()
            font_size: 25

        Button:
            id: make_halting_button
            text: "Make Halting"
            on_release: root.make_halting_state()
            font_size: 25

        Button:
            id: set_tape_button
            text: "Set Tape.."
            on_release: root.set_tape()
            font_size: 25




