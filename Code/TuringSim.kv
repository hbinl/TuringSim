#:kivy 1.9.0
<Container>:
    RelativeLayout:
        size:root.size
        pos: root.pos
        orientation: 'vertical'
        id: container_rl

        BoxLayout:
            size_hint_y: 0.8
            pos_hint: {'y':0}

            ScatterLayout:
                size_hint: (2,2)
                id: layout_states
                bcolor: 0.7, 0.7, 0.7, 1
                canvas.before:
                    Color:
                        rgba: self.bcolor
                    Rectangle:
                        pos: self.pos
                        size: self.size

        BoxLayout:
            size_hint_y: 0.08
            pos_hint: {'y':0.92}
            orientation: 'horizontal'
            id: button_layout
            padding: 10
            Button:
                id: close_button
                text: "Close"
                on_release: root.close_handler()
                background_color: (1,0.1,0.1,1)
                font_size: 25

            Button:
                id: save_button
                text: "Save As"
                on_release: root.save_handler()
                font_size: 25


            Button:
                id: edit_button
                text: "Edit"
                on_release: root.edit_handler(self)
                font_size: 25


            Button:
                id: execute_button
                text: "Execute"
                on_release: root.execute_handler(self.text)
                background_color: (0.5,0.8,0.5,1)
                font_size: 25

            Button:
                id: step_button
                text: "Step"
                on_release: root.step_through_handler()
                background_color: (0.5,0.8,0.5,1)
                font_size: 25

            Button:
                id: zoom_button_plus
                text: "Zoom In"
                on_release: root.zoom_handler(self.text)
                background_color: (0.3,0.3,0.3,1)
                font_size: 25

            Button:
                id: zoom_button_actual
                text: "Original"
                on_release: root.zoom_reset()
                background_color: (0.3,0.3,0.3,1)
                font_size: 25

            Button:
                id: zoom_button_minus
                text: "Zoom Out"
                on_release: root.zoom_handler(self.text)
                background_color: (0.3,0.3,0.3,1)
                font_size: 25


#            Button:
#                id: about_button
#                text: "About"
#                on_release: root.about_handler()
#                font_size: 25

        BoxLayout:
            id: tape_layout
            size_hint_y: 0.07
            pos_hint: {'y':0.84, 'x':0.05}
            orientation: 'horizontal'
            ScrollView:
                size_hint: None, None
                size: 556,86
                bar_color: 1,1,1,1 #0,0,0,1
                canvas.before:
                    Color:
                        rgba: 0,0,0,1 #1,1,1,1
                    Rectangle:
                        pos: self.pos

                        size: 556, 86

                    Color:
                        rgba: 1,1,1,1 #0,0,0,1
                    Rectangle:
                        pos: self.pos[0]+3, self.pos[1]+3
                        size: 550, 80
                Label:
                    padding: (20,10)
                    text:"bbbbbbbbbb"
                    font_size: 35
                    color: 0,0,0,1
                    #text_size: None, self.height  # Set the text wrap box height
                    size_hint_x: None
                    width: self.texture_size[0]  # Set the Label width to the text width





<UIObj_Tape_Head>:
    canvas:
        Line:

            width: 3
            points: self.x+10, self.y+10,self.x+30, self.y+10, self.x+20, self.y+15, self.x+10, self.y+10



#### DIALOGS

<SaveFileChooserWindow>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: 0.1
            multiline: False
            hint_text: "Filename"

        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)


<SaveFileChooserWindow2>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            size: root.size
            pos: root.pos
            padding: [0,30,0,30]
            FileChooserListView:
                size: root.size
                pos: root.pos
                id: savefilechooser

        BoxLayout:
            size_hint_y: 0.1

            Button:
                text: "Cancel"
                on_release: root.cancel_dialog()

            Button:
                text: "Save"
                on_release: root.save_file(savefilechooser.path, savefilechooser.selection)


<BrowseFileChooserWindow>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            size: root.size
            pos: root.pos
            padding: [0,30,0,30]
            FileChooserListView:
                size: root.size
                pos: root.pos
                id: filechooser

        BoxLayout:
            size_hint_y: 0.1

            Button:
                text: "Cancel"
                id: cancel_button
                on_release: root.cancel_dialog()

            Button:
                text: "Load"
                on_release: root.load_file(filechooser.path, filechooser.selection)


<HomeScreenWindow>:
    RelativeLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        id: homescreenwindow
        BoxLayout:
            size: root.size
            y: root.size[1]*0.5
            #pos_hint_y: 0.2
            size_hint_y: 0.5
            orientation: "vertical"
            Label:
                text: root.string

        BoxLayout:
            size_hint_y: 0.4

            bcolor: 0.7, 0.7, 0.7, 1
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: "vertical"
            Button:
                text: "Load a Turing Machine program from XML"
                id: home_load

            Button:
                text: "Create New Turing Machine Program"
                id: home_new_dtm

